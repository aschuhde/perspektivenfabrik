{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:o} {RequestId,13} [{Level:u3}] {SourceContext} {Message} ({EventId:x8}){NewLine}{Exception}"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "outputTemplate": "{Timestamp:o} {RequestId,13} [{Level:u3}] {SourceContext} {Message} ({EventId:x8}){NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/app-serilog.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} {RequestId,13} [{Level:u3}] {SourceContext} {Message} ({EventId:x8}){NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithProcessId", "WithHttpRequestId", "WithThreadId", "WithMachineName" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "default": "User ID=%POSTGRES_USER%;Password=%POSTGRES_PASSWORD%;Host=%POSTGRES_HOST%;Port=%POSTGRES_PORT%;Database=%POSTGRES_DB%;"
  },
  "Jwt": {
    "Key": "%JWT-KEY%"
  },
  "AzureMonitor": {
    "Enabled": true,
    "ConnectionString": "InstrumentationKey=b2e583b8-6b7d-4fa7-a423-d3c54d944c28;IngestionEndpoint=https://germanywestcentral-1.in.applicationinsights.azure.com/;LiveEndpoint=https://germanywestcentral.livediagnostics.monitor.azure.com/;ApplicationId=a2d7a5a0-f4b0-465a-bf01-e5b74ec4df01"
  }
}
